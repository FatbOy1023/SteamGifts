<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorDefaultBackground">@color/colorPrimary</item>
        <item name="colorCardBackground">#ffffff</item>
        <item name="colorBehindCardBackground">#e4e4e4</item>
        <item name="colorLightSeparatorBackground">#d8d8d8</item>
        <item name="colorLighterSeparatorBackground">#cccccc</item>
        <item name="colorAccountHeader">@color/colorPrimary</item>
        <item name="colorHighlightBackground">@color/md_blue_100</item>
        <item name="lightTextColor">#9a9a9a</item>
    </style>

    <style name="AppTheme.Dark" parent="MaterialDrawerTheme">
        <item name="colorPrimary">#222222</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorDefaultBackground">#222222</item>
        <item name="colorCardBackground">#222222</item>
        <item name="colorBehindCardBackground">@color/colorTransparent</item>
        <item name="colorLightSeparatorBackground">#666666</item>
        <item name="colorLighterSeparatorBackground">#333333</item>
        <item name="colorAccountHeader">#000000</item>
        <item name="colorHighlightBackground">@color/md_blue_grey_700</item>
        <item name="lightTextColor">#777777</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MediumButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">8dp</item>
    </style>

    <style name="MediumButton.Colored" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">8dp</item>
    </style>

    <!-- Comment Styles -->
    <style name="SmallText.NormalUser" parent="SmallText">
        <item name="android:textColor">?attr/lightTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText.HighlightOp" parent="SmallText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">?attr/colorAccountHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Use rather rectangular image in the account header. -->
    <style name="BezelImageView">
        <item name="biv_maskDrawable">@drawable/material_drawer_square_mask</item>
        <item name="biv_drawCircularShadow">false</item>
        <item name="biv_selectorOnPress">@color/material_drawer_primary</item>
    </style>

    <style name="GiveawayIndicatorIcon">
        <item name="android:layout_width">@dimen/giveaway_list_indicator_size</item>
        <item name="android:layout_height">@dimen/giveaway_list_indicator_size</item>
        <item name="android:layout_marginRight">@dimen/giveaway_list_indicator_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
