<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/giveaway_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/giveaway_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/giveaway_image"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/giveaway_name"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:text="Giveaway Name"
                android:textAlignment="viewStart" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/indicator_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <View
                        android:id="@+id/giveaway_list_indicator_whitelist"
                        style="@style/GiveawayIndicatorIcon"
                        android:backgroundTint="@color/giveawayIndicatorColorWishlist" />

                    <View
                        android:id="@+id/giveaway_list_indicator_group"
                        style="@style/GiveawayIndicatorIcon"
                        android:backgroundTint="@color/giveawayIndicatorColorGroup" />

                    <View
                        android:id="@+id/giveaway_list_indicator_level_positive"
                        style="@style/GiveawayIndicatorIcon"
                        android:backgroundTint="@color/giveawayIndicatorColorLevelOkay" />

                    <ImageView
                        android:id="@+id/giveaway_list_indicator_level_negative"
                        style="@style/GiveawayIndicatorIcon"
                        android:backgroundTint="@color/giveawayIndicatorColorLevelTooHigh" />

                    <TextView
                        android:id="@+id/giveaway_details"
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Giveaway Details" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:singleLine="true"
                    android:text="Time"
                    android:textAlignment="viewEnd" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>